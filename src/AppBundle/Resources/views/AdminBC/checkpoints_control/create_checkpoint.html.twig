{% extends 'AppBundle::base.html.twig' %}


{% block title %}Личный кабинет администратора{% endblock %}

{% block body %}

    <div id="page-wrapper">
    <div class="row">
    <div class="col-lg-12">
        {% block breadcrumb %}
            <div id="breadcrumbs" class="btn-group btn-breadcrumb">
                        <br>
                        <a class="btn btn-default" href="{{ path('main_page') }}">
                        <i class="fa fa-home"></i>Главная
                        </a>
                        <a class="btn btn-default" href="{{ path('buildings_list')}}">Управление зданиями
                        </a>
                        <a class="btn btn-default" href="{{ path('buildings_show', {'qvBuilding':qvBuilding.id}) }}">Управление КПП
                        </a>
                    </div>
        {% endblock %}

        <h1 class="page-header">Создание нового КПП</h1>
        <!-- /.col-lg-12 -->
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <div id="qv_checkpoint">
                {{ form_start(form) }}
                {{ form_row(form.name) }}    
    <br>
    <div class="form-inline form-input">
                <button type="submit" class="btn btn-default btn-sm">
                    Создать
                </button>
                <a class="btn btn-default btn-sm" href="{{ path('buildings_show', {'qvBuilding':qvBuilding.id}) }}">
                    Отменить
                </button>
                {{ form_end(form) }}
                </div>
            </div>
                <!-- /.col-lg-6-->
            </div>
            <!-- /.row -->
        </div>
    </div>
</div>
    <!-- /#page-wrapper -->


{% endblock %}