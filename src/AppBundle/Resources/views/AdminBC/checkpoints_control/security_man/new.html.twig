{% extends 'AppBundle::base.html.twig' %}

{% block title %}Личный кабинет администратора{% endblock %}
{% block body %}
        
     <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    {% block breadcrumb %}
                 <div id="breadcrumbs" class="btn-group btn-breadcrumb">
                <br>
                <a class="btn btn-default" href="{{ path('main_page') }}">
                    <i class="fa fa-home"></i>
                        Главная
                </a>
                <a class="btn btn-default" href="{{ path('security_list')}}">
                        Управление охраной
                </a>
             </div>
                    {% endblock %}
                                            
               <h1 class="page-header">Добавление нового охранника</h1>
                <!-- /.col-lg-12 -->
            </div>
  </div>
  <div class="row">
                {{ form_start(form)}}
                <div class="col-lg-6">
                    <div class="panel panel-default">
                    <div class="panel-heading">
                        Учетные данные
                    </div>
                <div class="panel-body">
                    <div class="form-group has-success">
                        {{form_row(form.login)}}
                        {{form_widget(form.password)}}

                        <div class="form-margin">&nbsp;</div>
                        <div class="form-margin">&nbsp;</div>
                    </div>
                </div>
            </div>
        </div>
                <div class="col-lg-6">
                    <div class="panel panel-default">
                <div class="panel-heading">
                        Персональные данные
                    </div>
                <div class="panel-body">
                    <div class="form-group has-success">
                        {{form_row(form.firstname)}}
                        {{form_row(form.lastname)}}
                        {{form_row(form.patronimic)}}
                        {{form_row(form.gender)}}
                        {{form_row(form.birthdate)}}
                    <div class="form-inline form-input text-right"><br>
                            <button type="submit" class="btn btn-default btn-sm">
                                Создать
                            </button>
                            <a href="{{ path('leasers_list') }}" class="btn btn-default btn-sm">
                                Отменить
                            </a>
                </div>
            </div>
        </div>
    </div>
    </div>
            <!-- /#page-wrapper -->
            {{form_end(form)}}
        </div>
    </div>
    {% endblock %}          
  
{% block js %}
            <script>
          $(document).ready(function() {
        $('#form_password_second').change(function() {
            var pass = $("#form_password_first").val();
            var pass_rep = $("#form_password_second").val();

            if (pass != pass_rep) {
                $("#form_password_second").css('border', 'red 2px solid');
                alert('Введенные пароли не совпадают! Пожалуйста, попробуйте еще раз.');    
    }else {     $("#form_password_second").css('border', '#3c763d 1px solid');}

        });
    });
        </script>
    {% endblock %}


