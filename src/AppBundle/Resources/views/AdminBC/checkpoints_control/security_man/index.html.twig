                <th  class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Actions: activate to sort column ascending" style="width: 40px;">Дата рождения</th>
                
                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Actions: activate to sort column ascending" style="width: 40px;">Действия</th>
                        </tr>
                    </thead>
                    
        <tbody>
        <tr class="gradeA odd" role="row">
         {% for qvUserPassport in  usp %}
