{% extends 'AppBundle::base.html.twig' %}



{% block title %}Личный кабинет администратора{% endblock %}

    {% block body %}

       <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                {% block breadcrumb %}
                    <div id="breadcrumbs" class="btn-group btn-breadcrumb">
                        <br>
                        <a class="btn btn-default" href="{{ path('main_page') }}">
                            <i class="fa fa-home"></i>Главная
                        </a>
                    </div>
                {% endblock %}

                <h1 class="page-header">Управление зданиями</h1>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
<div class="row">
                <div class="col-lg-10">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table id="security_dataTable" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                           <th>
                                                Фамилия
                                            </th>
                                            <th>
                                                Имя
                                            </th>
                                            <th>
                                                Отчество
                                            </th>
                                            <th>
                                                Дата рождения
                                            </th>

                                            <th>
                                                Действия
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                              {% for qvUserPassport in  usp %}
                                            <tr >
                                                <td>
                                                    <a href="{{ path('show_security', { 'id': qvUserPassport.id }) }}">
                                                        {{ qvUserPassport.firstname }}
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="{{ path('show_security', {'id': qvUserPassport['id']}) }}">          
                                                        {{ qvUserPassport.lastname }}
                                                    </a>
                                                </td>
                                                <td>
                                                   <a href="{{ path('show_security', {'id': qvUserPassport['id']}) }}" 
                                                   >
                                                   {{ qvUserPassport.patronimic }}
                                               </a>
                                           </td>
                                           <td>
                                               <a href="{{ path('show_security', {'id': qvUserPassport['id']}) }}">
                                                {% if qvUserPassport.birthdate %}
                                                  {{ qvUserPassport.birthdate|date('Y-m-d') }}
                                              {% endif %} 
                                          </a>
                                      </td>

                                      <td class="center">
                                        <div class="btn-group">
                    <a class="btn btn-infotext btn-default" href="{{ path('show_security', { 'id': qvUserPassport.id }) }}" data-title = "Посмотреть"> 
                    <i class="fa fa-eye"></i> </a> &nbsp; &nbsp;
                    <a href="{{ path('edit_security', { 'id': qvUserPassport.id }) }}" class="btn btn-default btn-infotext" data-title = "Изменить или удалить"> <i class="fa fa-edit"></i> </a>
                                            </div>
                                        </td>
                                    </tr>   
                                {% endfor %} 
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
        </div>
{% endblock %}

{% block js %}
    <script> 
 $(document).ready(function(){
    $('#security_dataTable').DataTable();
});
</script>
{% endblock %}
