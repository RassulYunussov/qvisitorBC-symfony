{% extends 'AppBundle::base.html.twig' %}



{% block title %}Личный кабинет администратора{% endblock %}

    {% block body %}

       <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                {% block breadcrumb %}
                    <div id="breadcrumbs" class="btn-group btn-breadcrumb">
                        <br>
                        <a class="btn btn-default" href="{{ path('main_page') }}">
                            <i class="fa fa-home"></i>Главная
                        </a>
                    </div>
                {% endblock %}

                <h1 class="page-header">Управление охраной</h1>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
<div class="row">
                <div class="col-lg-10">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table id="security_dataTable" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                           <th>
                                                Фамилия
                                            </th>
                                            <th>
                                                Имя
                                            </th>
                                            <th>
                                                Отчество
                                            </th>
                                            <th>
                                                Дата рождения
                                            </th>
                                            <th>
                                                Статус
                                            </th>
                                            <th>
                                                Действия
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
{% for qvUserPassport in  usp %}
    {% if qvUserPassport.user.disabled == 0 %} 
    <tr >
        <td>
            <a href="{{ path('show_security', 
                {'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id }) }}">
                    {{ qvUserPassport.firstname }}
            </a>
        </td>
        
        <td>
            <a href="{{ path('show_security', 
            {'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id}) }}">
                {{ qvUserPassport.lastname }}
            </a>
        </td>
        
        <td>
            <a href="{{ path('show_security', 
                {'qvUser':qvUserPassport.user,'id': qvUserPassport.id}) }}">
                    {{ qvUserPassport.patronimic }}
            </a>
        </td>
        
        <td>
            <a href="{{ path('show_security', 
                {'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id}) }}">
                {% if qvUserPassport.birthdate %}
                    {{ qvUserPassport.birthdate|date('Y-m-d') }}
                {% endif %} 
            </a>
        </td>
        
        <td class="center">Активен
            <div class="btn btn-xs">
                <a name="enable_btn" class="btn btn-success btn-xs enabled" href="{{ path('user_disabled', { 'qvUser':qvUserPassport.user.id }) }}">
                        <i class="fa fa-lock"></i>
                </a>
            </div>
        </td>

        <td class="center">
            <div class="btn-group">
                <a class="btn btn-infotext btn-default" href="{{ path('show_security', { 'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id }) }}" data-title = "Посмотреть"> 
                    <i class="fa fa-eye"></i>
                </a> 

                <a href="{{ path('edit_security', {'qvUser':qvUserPassport.user.id, 'id': qvUserPassport.id }) }}" class="btn btn-default btn-infotext" data-title = "Изменить">
                    <i class="fa fa-edit"></i> 
                </a>
            </div>
        </td>
    </tr>
    {% else %}  
        <tr class="disabled">
        <td>
            <a href="{{ path('show_security', 
                {'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id }) }}">
                    {{ qvUserPassport.firstname }}
            </a>
        </td>
        
        <td>
            <a href="{{ path('show_security', 
            {'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id}) }}">
                {{ qvUserPassport.lastname }}
            </a>
        </td>
        
        <td>
            <a href="{{ path('show_security', 
                {'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id}) }}">
                    {{ qvUserPassport.patronimic }}
            </a>
        </td>
        
        <td>
            <a href="{{ path('show_security', 
                {'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id}) }}">
                {% if qvUserPassport.birthdate %}
                    {{ qvUserPassport.birthdate|date('Y-m-d') }}
                {% endif %} 
            </a>
        </td>
        
        <td class="center">
            <div class="btn btn-xs">Отключен
                <a name="enable_btn" class="btn btn-danger btn-xs enabled" href="{{ path('user_enabled', { 'qvUser':qvUserPassport.user.id }) }}">
                        <i class="fa fa-lock"></i>
                </a>
            </div>
        </td>

        <td class="center">
            <div class="btn-group">
                <a class="btn btn-infotext btn-default" href="{{ path('show_security', {'qvUser':qvUserPassport.user.id,'id': qvUserPassport.id }) }}" data-title = "Посмотреть"> 
                    <i class="fa fa-eye"></i>
                </a> 

                <a href="{{ path('edit_security', {'qvUser':qvUserPassport.user.id, 'id': qvUserPassport.id }) }}" class="btn btn-default btn-infotext" data-title = "Изменить">
                    <i class="fa fa-edit"></i> 
                </a>
            </div>
        </td>
    </tr>
{% endif %}
    {% endfor %} 
</tbody>
</table>
<br>
<div class="text-right">
<a class="btn btn-success" href="{{ path('new_security')}}">
    Добавить охранника
</a>
</div>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
        </div>
{% endblock %}

{% block js %}
    <script> 
 $(document).ready(function(){
    $('#security_dataTable').DataTable();
});
</script>
{% endblock %}
