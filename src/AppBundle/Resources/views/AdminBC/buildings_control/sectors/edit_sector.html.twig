{% block title %}Личный кабинет администратора{% endblock %}


{% block body %}

    <div id="page-wrapper">
		<div class="row">
			<div class="col-lg-12">
				{% block breadcrumb %}
					 <div id="breadcrumbs" class="btn-group btn-breadcrumb">
                        <br>
                        <a class="btn btn-default" href="{{ path('main_page') }}">
                        <i class="fa fa-home"></i>Главная
                        </a>
							<a class="btn btn-default" href="\adminbc\building\{{qvSector.floor.building.id}}\show">Управление зданиями</a>
