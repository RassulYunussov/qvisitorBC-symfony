{% extends 'AppBundle::base.html.twig' %}


{% block title %}Личный кабинет администратора{% endblock %}

{% block header %}
    <a class="navbar-brand" href="adminbc">QVisitor</a>
{% endblock %}

	{%block pagemenu%}
        {{ include('AppBundle:Adminbc:pagemenu.html.twig') }}
    {%endblock%}

{% block body %}




    <div id="page-wrapper">
		<div class="row">
			<div class="col-lg-12">
				{% block breadcrumb %}
					<div id="breadcrumbs"><br>
						<ul>
							<li><a href="adminbc">Главная</a></li>
							<li><a href="buildings_control">Управление зданиями</a></li>
							<li><a href="buildings_control">Этажи</a></li>
							<li><a href="show_floor">Информация об этаже</a></li>
							<li><a href="edit_floor">Изменить информацию об этаже</a></li>
						</ul>
					</div>
				{% endblock %}

				<h1 class="page-header">Личный кабинет администратора</h1>
				<!-- /.col-lg-12 -->
				</div>
   
			<div class="col-lg-12">
				<div class="panel panel-default">
					
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-6">
								<form name="qv_floor" method="post">
									<div id="qv_floor">
										<div class="form-group">
											<label for="qv_floor_name">Изменить номер этажа</label>
												<input type="text" class="form-control" id="qv_floor_name" name="qv_floor[name]">
										</div>
									
									<div class="form-group">
										<label for="qv_floor_building">Сменить здание</label>
										<select class="form-control" id="qv_floor_building" name="qv_floor[building]"><option value=""></option></select>
										<br>
																				
										<br>
										<button type="submit" class="btn btn-success">Сохранить изменения</button>
								</form>
							</div>
							<!-- /.col-lg-6 (nested) -->
						</div>
						<!-- /.row (nested) -->
					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
   
        <!-- /.row -->
        </div>
    <!-- /#page-wrapper -->
	</div>
    


{% endblock %}