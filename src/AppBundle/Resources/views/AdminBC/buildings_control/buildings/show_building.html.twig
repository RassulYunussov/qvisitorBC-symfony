	<div class="tab-pane fade active in" id="home">
    	<h4>Управление этажами</h4>
    	<div class="table-responsive table-striped">
<table class="table-bordered" id="dataTables-floor-control" aria-describedby="dataTables-building-control_info">
<thead>
<tr>
<th>#</th>
<th> Название этажа</th>
<th> Соответствующие сектора</th>
</tr>
</thead>
<tbody>
{% for floor in floors %}
<tr>
	<td>{{ loop.index }}</td>
<td>
<a href="{{ path('floors_show', {'qvBuilding': qvBuilding.id ,'id': floor.id }) }}">
{{ floor.name }}
</a>
</td>
<td>
<p> Сектора -{% for sector in sectorlist %}
{% if sector.floor == floor.name %}
 <a href="{{path('sectors_show', {'qvBuilding': qvBuilding.id, 'qvFloor': sector.floor.id, 'id': sector.id }) }}">
{{  sector.name }}, 
</a>
{% endif %} 
{% endfor %}</p>
</td> 

</tr>{% endfor %}
</tbody>
</table>
</div>
<!-- /.table-responsive -->
<br>
		<div class="text-right">
		<a href="{{ path('floors_create', {'qvBuilding': qvBuilding.id}) }}" class="btn btn-success btn-sm text-right">
			Добавить этаж
		</a>
	</div>
    </div>

    <div class="tab-pane fade" id="profile">
    	<h4>Управление КПП</h4>
		<div class="table-responsive table-striped">
<table class="table-bordered" id="dataTables-checkpoint-control" aria-describedby="dataTables-building-control_info">
<thead>
<tr>
<th>#</th>
<th> Номер КПП</th>
<th> Дейтвия </th>
</tr>
</thead>
<tbody>
{% for check in check %} 
<tr>
	<td>{{ loop.index }}</td>
<td>
<a href="{{ path('checkpoints_show', {'qvBuilding':qvBuilding.id, 'id': check['id'] }) }}">
{{ check.name }}
</a>
</td>
<td>
	<div class="text-right">
<div class="btn-group">
	
