                        <i class="fa fa-check"></i>
                  </a> &nbsp; 
                  
                  <a class="btn btn-circle btn-default" href="{{ path('checkpoints_edit', { 'qvBuilding':qvBuilding.id, 'id': check.id }) }}" data-title="Изменить или удалить информацию о КПП">
                    <i class="fa fa-edit"></i>
                  </a>
	<button class="btn btn-circle btn-default btn-xs" type="submit" data-title = "Удалить пока не работает">
		<i class="fa fa-times"></i>
	</button>

</div>
</div>
</td> 
</tr>
{% endfor %}
</tbody>
</table>
</div>
<!-- /.table-responsive -->
		<br>
    	<div class="text-right">
		<a href="{{ path('checkpoints_create', {'qvBuilding': qvBuilding.id,}) }}" class="btn btn-sm btn-success text-right">
			Добавить КПП
		</a>
	</div>  
    </div>
</div>
	
</div>
    <!-- /.panel-body -->
    </div>
<!-- /.panel -->
</div>
</div>
</div>

