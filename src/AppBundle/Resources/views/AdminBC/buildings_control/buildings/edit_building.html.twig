{% extends 'AppBundle::base.html.twig' %}


{% block title %}Личный кабинет администратора{% endblock %}

{% block body %}

	 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                	{% block breadcrumb %}
					 <div id="breadcrumbs" class="btn-group btn-breadcrumb">
                <br>
                <a class="btn btn-default" href="{{ path('main_page') }}">
                    <i class="fa fa-home"></i>
                        Главная
                </a>
						<a class="btn btn-default" href="{{ path('buildings_list') }}">Управление зданиями</a>
						<a class="btn btn-default" href="\adminbc\building\{{qvBuilding.id}}\show">Просмотр информации о зданиях</a>
					</div>
					{% endblock %}
											
               <h1 class="page-header">Изменение информации о здании</h1>
                <!-- /.col-lg-12 -->
            </div>
			
		<div class="col-lg-6">
        <div class="form-group">
      <ul>
                {{ form_start(edit_form) }}
                 {% for child in edit_form %}
                <li>
                         {{ form_label(child) }}
                    {{ form_widget(child, {'attr': {'class':'form-control'}}) }}
    </li>
{% endfor %}
    </ul>           
    <br>
    <div class="form-inline form-input">
                <button type="submit" class="btn btn-default btn-sm">
                    Сохранить
                </button>
                <a href="\adminbc\building\{{qvBuilding.id}}\show" class="btn btn-default btn-sm">
                    Отменить
                </a>
                {{ form_end(edit_form) }}

                {{ form_start(delete_form) }}
                <button class="btn btn-default btn-sm" type="submit">
                    Удалить
                </button>
                {{ form_end(delete_form) }}             
                </div>
    </div>
            <!-- /.row -->
			        </div>
	</div>
        <!-- /#page-wrapper -->

    
            {% endblock %}