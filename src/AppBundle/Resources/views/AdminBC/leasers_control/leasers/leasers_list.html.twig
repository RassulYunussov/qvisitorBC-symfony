{% extends 'AppBundle::base.html.twig' %}


{% block title %}Личный кабинет администратора{% endblock %}

	
{% block body %}

<div id="page-wrapper">
<div class="row">
<div class="col-lg-12">
{% block breadcrumb %}
 <div id="breadcrumbs" class="btn-group btn-breadcrumb">
             	<br>
            	<a class="btn btn-default" href="{{ path('main_page') }}">
            		<i class="fa fa-home"></i>
            			Главная
            	</a>
       		 </div>
{% endblock %}

<h1 class="page-header">Управление арендаторами</h1>
<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
</div>

<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<div class="panel-heading">
Арендаторы
<!-- /.panel-heading -->
<div class="text-right">
<a class="btn btn-success btn-xs" href="{{ path('leasers_create') }}">Добавить арендатора</a>
</div>
</div>

</div>
</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<table class="table table-striped table-bordered table-hover dataTable no-footer" id="LeaserdataTables" role="grid" aria-describedby="dataTables-example_info">
            <thead>
            <tr role="row">
            	<th class="sorting_asc" tabindex="0" aria-controls="LeaserdataTables" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 172px;">		
            		№ 
            	</th>
            	<th class="sorting" tabindex="0" aria-controls="LeaserdataTables" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 204px;">
            		BIN
            	</th>
            	<th class="sorting" tabindex="0" aria-controls="LeaserdataTables" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 185px;">
            		Название компании
            	</th>
            	<th class="sorting" tabindex="0" aria-controls="LeaserdataTables" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 185px;">
            		Занимает Этаж(и)
            	</th>
            	<th class="sorting" tabindex="0" aria-controls="LeaserdataTables" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 149px;">
            		Занимает Офис(ы) 
            	</th>
            	<th class="sorting" tabindex="0" aria-controls="LeaserdataTables" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 110px;">
            		Действия:
            	</th>
            </tr>
        	</thead>
        <tbody>
        	{% for qvLeaser in qvLeasers %}
            <tr class="gradeA odd" role="row">
            	<td class="sorting_1">{{ loop.index }}</td>
                <td class="center"><a href="{{ path('leasers_show', {'id':qvLeaser.id})}}">
                	{{ qvLeaser.bin }}
                </td></a>
                <td class="center"><a href="{{ path('leasers_show', {'id':qvLeaser.id})}}">
                	{{ qvLeaser.name }}
                </a></td>
                <td class="center">{{ qvLeaser.countS }}</td>
                <td class="center">{{ qvLeaser.countf }}</td>
                <td class="center">
    				<div class="btn-group">
<button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
	                			Выберите действие 
	        					<span class="caret"></span>
	        				</button>
	            			
	            			<ul class="dropdown-menu pull-right" role="menu">
		                		<li>
		                    		<a href="{{ path('leasers_show', { 'id': qvLeaser.id }) }}">Информация об учетной записи пользователя
		                    		</a>
		                		</li>
		                		<li>
		                    		<a href="{{ path('leasers_edit', { 'id': qvLeaser.id }) }}">Изменить или удалить информацию о пользователе
		                    		</a>
		                		</li>
	                	</ul>
    				</div>
				</td>
            </tr>
			{% endfor %}
        </tbody>
    </table>
</div>
</div>
<!-- /.table-responsive -->
</div>
<!-- /#page-wrapper -->
{% endblock %}
{% block js %}
<script type="text/javascript">
	$(document).ready(function(){
    $('#LeaserdataTables').DataTable();
});
</script>
{% endblock %}