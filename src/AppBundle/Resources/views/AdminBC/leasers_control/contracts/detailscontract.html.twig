<!-- Modal -->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          					<h4 class="modal-title" id="myModalLabel">Информация о контракте {{ qvModalContract.name }}</h4>
                    </div>
<div class="modal-body">
	<div class="panel-body">
		<div class="col-lg-12">

<div class="table-responsive">
	<table class="table table-hover">
		<tbody>
			
			<tr>
                <td>Номер договора</td>
				<td>{{ qvModalContract.name }}</td>
				</tr>
				<tr>
                <td>Название компании</td>
				<td>{{ qvModalContract.leaser }}</td>
			</tr>

			<tr>
                <td>Офис(ы)</td>
            	
					<td>
					{% for a in qvModalContract.sectors %}
						{{a.name}}{% if not loop.last %},{% endif %}
					{% endfor %}
					</td>
			</tr>
			<tr>
				<td>Статус договора</td>
				<td>{% if qvModalContract.enddate|date('Y-m-d') < "now"|date("Y-m-d")%}
					Не действителен
				{% else %}
				Действителен
				{% endif %}</td>
			</tr>
			
			<tr>
				<td>Подписан</td>
				<td>{% if qvModalContract.startdate %}{{ qvModalContract.startdate|date('Y-m-d H:i:s') }}{% endif %}</td>
			</tr>
			
			<tr>
				<td>Срок окончания действия</td>
				<td>{% if qvModalContract.enddate %}{{ qvModalContract.enddate|date('Y-m-d H:i:s') }}{% endif %}
				</td>
            </tr>
		</tbody>
	</table>
	</div>
	<!-- /.panel-body -->
	</div>
    </div>
		<div class="modal-footer">
    		<button type="button" class="btn btn-default" data-dismiss="modal">
    			Закрыть
    		</button>
        </div>
        </div>
        <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
           </div>