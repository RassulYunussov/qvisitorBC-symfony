        <script src="{{asset('bootstrap1/bower_components/jquery/dist/jquery.min.js')}}"></script>

    <script> 
    function loadBuildings(){
            $('#form_buildings').empty();
            $.ajax({
                type: "GET",
                url: "{{ path('buildings')}}",
                success: function(buildings){
                    $.each(JSON.parse(buildings),function(k,v){
                        $('#form_buildings').append('<option value="'+v.id+'">'+v.name+'</option>')
                    });
                }
            });
        }
    
     $(function (){
            loadBuildings();
        });

       function loadFloors(buildingId){
            $('#form_floors').empty();
            $.ajax({
                type: "GET",
                url: "{{ path('floors')}}",
                data: {'id':buildingId},
                success: function(data){
                    $.each(JSON.parse(data),function(k,v){
                        $('#form_floors').append('<option value="'+v.id+'">'+v.name+'</option>')
                    });
                }
            });
        }

        $(function (){
            loadFloors($('#form_buildings option:selected').val());
            $('#form_buildings').change(function(){
                loadFloors($('#form_buildings option:selected').val());
            });
        });
    </script>

    <script type="text/javascript">

        function loadSectors(floorId){
            $('#form_sector').empty();
            $.ajax({
                type: "GET",
                url: "{{ path('sectors')}}",
                data: {'id':floorId},
                success: function(data){
                    $.each(JSON.parse(data),function(k,v){
                        $('#form_sector').append('<option value="'+v.id+'">'+v.name+'</option>')
                    });
                }
            });
        }
        $(function (){
            loadSectors($('#form_floors option:selected').val());
            $('#form_floors').change(function(){
                loadSectors($('#form_floors option:selected').val());
            });
        });
    </script>

    <script>
    $(document).ready(function()
     {
        var $build;
        $('#form_floors').hide(); 
        $('#cancel').hide();
        $('label[for="form_floors"]').hide();
        $('#form_sector').hide();
        $('label[for="form_sector"]').hide();

  $('#form_buildings').prepend($ ('<option value="0"></option>'));
            $("#form_buildings [value='0']").attr("selected", "selected");
  
            $('#form_buildings').change(function()
                {
                $('#form_floors').prepend($ ('<option value="0"></option>'));
            $("#form_floors [value='0']").attr("selected", "selected");
                $('#cancel').show();
                $('#cancel').on('click', function(){
                    $('#form_floors').hide(); 
                    $('#form_floors').empty(); 
                    $('#cancel').hide();
                    $('label[for="form_floors"]').hide();
                    $('#form_sector').hide();
                    $('label[for="form_sector"]').hide();
                    $('#form_buildings').show();
                     $('label[for="form_buildings"]').show();
                });

                $('#form_floors').show();
                $('label[for="form_floors"]').show();
                $('#form_buildings').hide('slow', function(){
                $build = $('#form_buildings option:selected').text();
                $build = $('#build-label').html("<h4>"+ "Выбрано здание " + $build + "</h4>");
                $('label[for="form_buildings"]').hide();
                }); 
            }); 
                

            $('#form_floors').change(function()
                {              
                $('#form_sector').show();
                $('label[for="form_sector"]').show();
                $('#form_floors').hide('slow', function(){
                    var $floor = $('#form_floors option:selected').text();
                    $('#build-label').html("<h4>" + $build.text() + "/Этаж " + $floor +  "</h4>");
                });
                $('label[for="form_floors"]').hide();
            });

                $('#save').on('click', function(){
                    var valuename = [];
                    var valueid = [];
                     $('#form_sector option:selected').each(function()
                        {
                            valueid.push($(this).val());
                            valuename.push($(this).text());
                            $('#sectors_array').html(valuename + ',');
                            $('#form_sectors').html(valueid);
                            $('#myModal').modal('hide');
                        });
                     return false;
            });
        });

    </script>
