        <tbody> 
            <tr>
            <form name="form" method="post">
            <br>
                <div>
                
                    <label for="form_buildings" class="required">
                        Здания
                    </label>
                    
                    <select id="form_buildings" name="form[buildings]" class="form-control form-input">
