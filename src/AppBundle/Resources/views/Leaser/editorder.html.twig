{% extends 'AppBundle::base.html.twig' %}

{% block title %}Редактирование заявки{% endblock %}

{% block pagemenu %}
		<li>
			<a href="leaserpage" class="active">Заявки</a>
        </li>
		<li>
			<a href="visitorlist" class ="active">Посетители</a>
        </li>
{% endblock %}



{% block body %}
		
        <style>
.type_date-inline{
    position: relative;
    display: inline-block;
    padding-left: 20px;
    width: 40%;
    height: 34px;
    margin-bottom: 0;
    font-weight: 400;
    vertical-align: middle;
    cursor: pointer;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
}
</style>
        
	 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                	{% block breadcrumb %}
					<div id="breadcrumbs">
						<br>
						<ul class="breadcrumb">
						<li><a href="leaserpage">Заявки</a></li>
						<li><a href="leaserpage">Посетители</a></li>
						<li><a href="leaserpage">Изменение заявки</a></li>
						</ul>
					</div>
					{% endblock %}
				
               <h1 class="page-header">Страница редактирования заявки</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row" align="justify">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                      <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-8">
                                    <form role="form">
                                        <div class="form-group" id = 'visit_date'>
                                           <label>Дата входа</label><br>
                                           <label> C </label>     <input type="date" class="type_date-inline" >
                                           <label> По </label>     <input type="date" class="type_date-inline">
                                        </div>
                                        
                                        <div class="form-group" id = 'visit_time'>
                                            <input type="checkbox" id = 'cb1'/>
                                            <label>Время входа</label>
                                        </div>
                                            <div id = 'cat1' >
                                                <label> C </label>     <input type="time" class="type_date-inline">
                                                <label> По </label>     <input type="time" class="type_date-inline">
                                            </div>
                                        </div>
                                        <br/><br/>
                                        <br><br><br><br><br><br><br>
                                          <div class="form-group" id = 'order_type'>
                                            <label>Тип заявки:</label>
                                            <label class="radio-inline">
                                                <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline1" value="option1" checked>Одноразовая заявка
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline2" value="option2" >Многоразовая заявка
                                            </label>
                                        </div>                                    
                                    </form>
                                </div>
                                
                                    <h3>Информация о посетителе</h3>
                                    <form role="form">
                                        <div class="form-group has-success">
                                            <label class="control-label" for="inputSuccess">Фамилия посетителя</label>
                                            <input type="text" class="form-control" name="first_name" >
                                        </div>
                                        <div class="form-group has-warning">
                                            <label class="control-label" for="inputWarning">Имя посетителя</label>
                                            <input type="text" class="form-control" name = "last_name">
                                        </div>
                                        <div class="form-group has-error">
                                            <label class="control-label" for="inputError">Отчество посетителя</label>
                                            <input type="text" class="form-control" name="patronymic">
                                        </div>
                                           <button type="submit" class="btn btn-default">Изменить заявку</button>                                                                              
                                           <button type="reset" class="btn btn-default">Отменить</button>
                                    </form>
                                   
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    
            {% endblock %}