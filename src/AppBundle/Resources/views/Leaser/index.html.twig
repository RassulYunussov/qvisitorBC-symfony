{% extends 'AppBundle::base.html.twig' %}

{% block title %}Список посетителей{% endblock %}

{% block body %}

        <div id="page-wrapper">
            <!-- Page Heading -->
                    {% block breadcrumb %}
                    <div id="bc2" class="btn-group btn-breadcrumb">
                        <br>
                        <a class="btn btn-default" href="{{path('index')}}"><i class="fa fa-home"></i></a>
                    </div>
                    {% endblock %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Главная</h1>
                </div>
            </div>

            <div class="row">

                <h2>{{userPassport.lastname}} {{userPassport.firstname}} {{userPassport.patronimic}}</h2>
                <h3>Ваши контракты: {{count}} </br>
                    <ul>{% for qvContract in qvContracts %}
                        <li> {{qvContract.name}} - 
                            <ul>{% for sector in qvContract.sectors %}
                                <li>сектор {{sector.name}}, этаж {{sector.floor}}, здание {{sector.floor.building.name}}</li>
                             {% endfor %}
                            </ul>
                        </li>{% endfor %}
                    </ul></h3>

            </div>


        </div>
{% endblock %}