{% extends 'AppBundle::base.html.twig' %}

{% block title %}Список посетителей{% endblock %}

{% block body %}

        <div id="page-wrapper">
            <!-- Page Heading -->
                    {% block breadcrumb %}
                    <div id="bc2" class="btn-group btn-breadcrumb">
                        <br>
                        <a class="btn btn-default" href="{{path('index')}}"><i class="fa fa-home"></i></a>
                    </div>
                    {% endblock %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Главная</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="active" id="li-entrance"><a href="#entrance" data-toggle="tab">Посещения по заявкам</a>
                                </li>
                                <li id="li-hotentrance"><a href="#hotentrance" data-toggle="tab">Посещения без заявок</a>
                                </li>
                            </ul>

                                            {{form_start(form)}}
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="entrance">
                                    <div class="panel panel-default">
                                        <div class="panel panel-heading text-right">
                                            <h4>{{form_widget(form.eSelectdate)}}</h4>
                                        </div>
                                        <div class="panel-body">
                                            <div id='container_1'>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="hotentrance">
                                    <div class="panel panel-default">
                                        <div class="panel panel-heading text-right">
                                           <h4>{{form_widget(form.heSelectdate)}}</h4>
                                        </div>
                                        <div class="panel-body">
                                            <div id='container_2'>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                            {{form_end(form)}}
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>


        </div>
{% endblock %}
{% block js %}
<script src="https://code.highcharts.com/modules/exporting.js"></script>

<script src="{{asset('bootstrap1/dist/js/entrancecharts.js')}}"></script>


{% endblock %}