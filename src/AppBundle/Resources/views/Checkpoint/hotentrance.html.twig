{% extends 'AppBundle::base.html.twig' %}

{% block title %}Посетители{% endblock %}

{% block pagemenu %}
	{{ include('AppBundle:Checkpoint:pagemenu.html.twig') }}
{% endblock %}



{% block body %}

        <div id="page-wrapper">
            <!-- Page Heading -->
					{% block breadcrumb %}
					<div id="bc1" class="btn-group btn-breadcrumb">
                        <br>
                        <a class="btn btn-default" href="index"><i class="fa fa-home"></i></a>
                        <a class="btn btn-default" href="hotentrance">Посетители без заявок</a>
					</div>
					{% endblock %}
			<div class="row">
			</div>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Посетители без заявок</h1>
				</div>
			</div>
			
				
           
			<div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>Список посетителей за сегодня</h4>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="row">
								<div class="col-lg-8">
									<h5>Всего: </h5>
								</div>
								<div class="col-lg-4 text-right">
									<a href="hot-entrance-registration" class="btn btn-info form-margin"><i class="fa fa-plus"></i> Зарегистрировать</a>
								</div>
							</div>
                        
							<div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Время</th>
                                            <th>ФИО</th>
                                            <th>КПП</th>
                                            <th>Объект визита</th>
                                            <th>Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
									{% for qvHotEntrance in qvHotEntrances %}
										<tr>
                                        <td>{{qvHotEntrance.entrancedate|date('Y-m-d H:i') }}</td>
                                        <td>{{ qvHotEntrance.lastname }} {{ qvHotEntrance.firstname }} {{ qvHotEntrance.patronimic }}</td>
                                        <td>{{ qvHotEntrance.checkpoint }}</td>
                                        <td>{{ qvHotEntrance.leaser }}</td>
										<td>
										<button onclick="$('#myModal .modal-dialog').load('hotentrance/{{ qvHotEntrance.id }}');" class="btn btn-sm btn-default" data-toggle="modal" data-target="#myModal">Просмотр</button>
										</td>
                                        </tr>
										{% endfor %}
                                    </tbody>
                                </table>
                                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
									<div class="modal-dialog"></div>
								</div>
								</div>
                            </div>
						</div>	
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
		</div>
{% endblock %}
{% block js %}
    
    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
    </script>
{% endblock %}