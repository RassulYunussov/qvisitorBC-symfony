{% extends 'AppBundle::base.html.twig' %}

{% block title %}Посетители{% endblock %}

{% block pagemenu %}
	{{ include('AppBundle:Checkpoint:pagemenu.html.twig') }}
{% endblock %}



{% block body %}

        <div id="page-wrapper">
            <!-- Page Heading -->
			<div class="row">
					{% block breadcrumb %}
					<div id="breadcrumbs">
						<br>
						<ul>
							<li><a href="index">Главная</a></li>
							<li class="active"><a href="hotentrance">Посетители без заявок</a></li>
						</ul>
					</div>
					{% endblock %}
			</div>
			<div class="row">
			</div>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Посетители</h1>
				</div>
			</div>
			
				
			
			<div class="row">
                <div class="col-lg-12">
						<div class="form-group input-group">
                            <input type="text" class="form-control" placeholder="Найти">
                            <span class="input-group-btn"><button class="btn btn-default" type="button"><i class="fa fa-search"></i></button></span>
                        </div>
				</div>
            </div>
                <!-- /.row -->
           
			<div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>Список посетителей за сегодня</h4>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
							<div class="row">
								<div class="col-lg-12 text-right">
									<a href="hot-entrance-registration" class="btn btn-info"><i class="fa fa-plus"></i> Зарегистрировать</a>
								</div>
								<br>
							</div>
							<div class="row">
								<div class="col-lg-8">
									<h5>Всего: </h5>
								</div>
							</div>
							<div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Время</th>
                                            <th>ФИО</th>
                                            <th>Номер удостоверения</th>
                                            <th>Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
									{% for qvHotEntrance in qvHotEntrances %}
										<tr>
                                        <td>{{qvHotEntrance.entrancedate|date('Y-m-d H:i:s') }}</td>
                                        <td>{{ qvHotEntrance.lastname }} {{ qvHotEntrance.firstname }} {{ qvHotEntrance.patronimic }}</td>
                                        <td>{{ qvHotEntrance.comment }}</td>
										<td>
												<button onclick="$('#myModal .modal-dialog').load('hotentrance/{{ qvHotEntrance.id }}');" class="btn btn-sm btn-default" data-toggle="modal" data-target="#myModal">Просмотр</button>
										</td>
                                        </tr>
										{% endfor %}
                                    </tbody>
                                </table>
                                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
									<div class="modal-dialog"></div>
								</div>
								</div>
                            </div>
						</div>	
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
		</div>
{% endblock %}