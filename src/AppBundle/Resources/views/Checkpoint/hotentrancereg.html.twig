{% extends 'AppBundle::base.html.twig' %}

{% block title %}Регистрация посетителя{% endblock %}

{% block pagemenu %}
	{{ include('AppBundle:Checkpoint:pagemenu.html.twig') }}
{% endblock %}



{% block body %}

        <div id="page-wrapper">
            <!-- Page Heading -->
			<div class="row">
				<div class="col-lg-12">
					{% block breadcrumb %}
						<ol class="breadcrumb">
						  <li><a href="hotentrance">Посетители без заявок</a></li>
						  <li class="active">Регистрация посетителя без заявки</li>
						</ol>
					{% endblock %}
				</div>
			</div>
			<div class="row">
			</div>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Регистрация посетителя без заявки</h1>
				</div>
			</div>
			
				
			
			<div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           <i class="glyphicon glyphicon-user"></i> Посетитель
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form role="form">
                                        <div class="form-group">
                                            <label>Фамилия</label>
                                            <input class="form-control">
                                            <p class="help-block">Обязательное поле</p>
                                        </div>
										<div class="form-group">
                                            <label>Имя</label>
                                            <input class="form-control">
                                            <p class="help-block">Обязательное поле</p>
                                        </div>
										<div class="form-group">
                                            <label>Отчество</label>
                                            <input class="form-control">
                                        </div>
										<div class="form-group">
                                            <label>Номер удостоверения</label>
                                            <input class="form-control">
                                            <p class="help-block">Обязательное поле</p>
                                        </div>
										<div class="form-group">
                                            <label>Организация</label>
                                            <input class="form-control">
                                        </div>
										<div class="form-group">
                                            <label>Встречающий</label>
                                            <input class="form-control">
                                        </div>
									</form>
                                </div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Объект визита
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
									<form role="form">
										<fieldset disabled>
											<div class="form-group">
												<label for="disabledSelect">Фамилия</label>
												<input class="form-control" id="disabledInput" type="text" disabled>
											</div>
											<div class="form-group">
												<label for="disabledSelect">Имя</label>
												<input class="form-control" id="disabledInput" type="text" disabled>
											</div>
											<div class="form-group">
												<label for="disabledSelect">Отчество</label>
												<input class="form-control" id="disabledInput" type="text" disabled>
											</div>
										</fieldset>
									</form>
                                </div>
								<div class="col-lg-12 text-right">
									<button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
										Выбрать
									</button>
									<!-- Modal -->
								</div>	
									<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
										<div class="modal-dialog">
											<div class="modal-content">
												<div class="modal-header">
													<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
													<h4 class="modal-title" id="myModalLabel">Выбрать к кому посетитель</h4>
												</div>
												<div class="modal-body">
													<div class="row">
														<div class="col-lg-12">
																<div class="form-group input-group">
																	<input type="text" class="form-control" placeholder="Найти">
																	<span class="input-group-btn"><button class="btn btn-default" type="button"><i class="fa fa-search"></i></button></span>
																</div>
														</div>
													</div>
													<div class="dataTable_wrapper">
														<table class="table table-striped table-bordered table-hover" id="dataTables-example">
															<thead>
																<tr>
																	<th>Фамилия</th>
																	<th>Имя</th>
																	<th>Отчество</th>
																	<th>Действие</th>
																</tr>
															</thead>
															<tbody>
																<tr>
																<td>Путин</td>
																<td>Владимир</td>
																<td>Владимирович</td>
																<td><a class="btn btn-sm btn-info" href="#">Выбрать</a></td>
																</tr>
															</tbody>
														</table>
													</div>
												</div>
												<div class="modal-footer">
													<button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
												</div>
											</div>
																	<!-- /.modal-content -->
										</div>
																<!-- /.modal-dialog -->
									</div>

							</div>
						</div>
					</div>
					<div class="panel panel-info">
                        <div class="panel-heading">
                            <i class="fa fa-list-alt"></i> Заметка
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
									<form role="form">
										<div class="form-group">
                                            <textarea class="form-control" rows="3"></textarea>
                                        </div>
									</form>
                                </div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12 text-right">
                    <button type="button" class="btn btn-primary">Зарегистрировать</button>
					<a class="btn btn-default" href="hotentrance">Отмена</a>
				</div>
			</div>	
		</div>
{% endblock %}