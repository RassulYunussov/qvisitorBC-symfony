<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Выберите посетителей</h4>
    </div>
    <div class="modal-body">
        <div class="panel-body">
            <div class="col-lg-12">
                    <form id='VisitorForm' name="form" action='{{path('select-visitor',{qvOrder: qvOrder.id})}}' mehtod='POST' role="form">
                        <div id="form_visitors" class = "form-group">
                            {% for v in qvVisitors %}
                                <div class="checkbox" >
                                <label for="form_visitors_{{v.id}}" ><input type="checkbox"  id="form_visitors_{{v.id}}" name="form[visitors][]" value="{{v.id}}">{{v.lastname}} {{v.firstname}} {{v.patronimic}}</label></div>
                            {% endfor %}
                        </div>
                    
                    <div class="modal-footer"> <input type="submit" class="btn btn-default" id="checkBtn" value="Выбрать" >
                    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>  </div>   
            <!-- /.table-responsive -->
                   
                    </form>
            </div>
        </div>  
            </div>
        </div>
        {% block js %}
            <script type="text/javascript">
$(document).ready(function () {
    $('#checkBtn').click(function() {
      checked = $("input[type=checkbox]:checked").length;

      if(!checked) {
        alert("Необходимо выбрать по крайней мере одного посетителя");
        return false;
      }

    });
});

</script>
        {% endblock %}