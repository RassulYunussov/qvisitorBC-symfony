{% extends 'AppBundle::base.html.twig' %}

{% block title %}Смена пароля{% endblock %}

{% block body %}
	<link href="css/main.css" rel="stylesheet" type="text/css">
	<script>
	function checkPass() { 
if (document.getElementById('passwordX').value != document.getElementById('passwordY').value) { 
    alert('Пароли не совпадают! Попробуйте еще раз!') 
    return false; 
  } else return true; 
} 
	</script>
	 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                	{% block breadcrumb %}
					<div id="breadcrumbs">
						<br>
						<ul>
						<li><a href="\adminbc\index">Главная</a></li>
						<li><a href="\adminbc\edit_pass">Сенить пароль</a></li>
						</ul>
					</div>
					{% endblock %}
				
               <h1 class="page-header">Здесь вы можете сменить свой пароль</h1>
                </div>
                <!-- /.col-lg-12 -->
				<div class="row">
					<div class="col-lg-6">
						<div class="panel panel-default">
							<div class="panel-heading">
								------------------------
							</div>
							<div class="panel-body">
								<div class="row">
									<div class="col-lg-6">
										<form role="form">
											<div class="form-group">
												<label>Текущий пароль</label>
												<input type="password" class="form-control" placeholder="Введите ваш текущий пароль" required>
											</div>
											<div class="form-group">
												<label>Новый пароль</label>
												<input type="password" class="form-control" placeholder="Введите ваш новый пароль" required name="passwordX" id="passwordX"/>
											</div>
											<div class="form-group">
												<label>Подтвердите новый пароль</label>
												<input type="password" class="form-control" placeholder="Подтвердите ваш новый пароль" required/ name="passwordY" id="passwordY">
											</div>
											
											<button>
											<input type="submit" method="post" class="btn btn-default" id="submit" value="Изменить пароль" onsubmit="return checkPass()"> 
											</button>
											<button type="reset" class="btn btn-default">Сбросить</button>
										</form>
										
										
									</div>
									<!-- /.col-lg-6 (nested) -->
									
										
									</div>
									<!-- /.col-lg-6 (nested) -->
								</div>
								<!-- /.row (nested) -->
							</div>
							<!-- /.panel-body -->
						</div>
						<!-- /.panel -->
					</div>
					<!-- /.col-lg-12 -->
				</div>
	
	</div>
	</div>
	
{% endblock %}