{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h1>qvUser</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ qvUser.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ qvUser.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ qvUser.password }}</td>
            </tr>
            <tr>
                <th>Disabled</th>
                <td>{{ qvUser.disabled }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': qvUser.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
