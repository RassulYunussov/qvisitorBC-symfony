{% extends 'AppBundle::base.html.twig' %}

{% block title %}Супер-админ{% endblock %}

{% block pagemenu %}
	{{ include('AppBundle:SuperAdmin:pagemenu.html.twig') }}
{% endblock %}

{% block body %}

<div id="page-wrapper">

    <div class="row">
            {% block breadcrumb %}
				<div id="breadcrumbs">
					<br>
					<ul>
					<li><a href="analytics">Главная</a></li>
					<li><a href="admin-bc">Управление администраторами</a></li>
					<li><a href="admin-creation">Создание администратора БЦ</a></li>
					</ul>
				</div>
			{% endblock %}		
            <h1 class="page-header">Создание администратора БЦ</h1>
    </div>

	<div class="row">
		<div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
					<div class="col-lg-12">
                        <form role="form">
                            <div class="form-group">
										<div class="form-group">
                                            <label>Логин</label>
                                            <input class="form-control" required>
                                            <p class="help-block">Обязательное поле</p>
                                        </div>
                                            <label>Фамилия</label>
                                            <input class="form-control" required>
                                            <p class="help-block">Обязательное поле</p>
                                        </div>
										<div class="form-group">
                                            <label>Имя</label>
                                            <input class="form-control" required>
                                            <p class="help-block">Обязательное поле</p>
                                        </div>
										<div class="form-group">
                                            <label>Отчество</label>
                                            <input class="form-control">
                                        </div>
										<button type="submit" class="btn btn-info">Создать</button>
                                        <button type="reset" class="btn btn-default">Отмена</button>

						</form>
                    </div>
                </div>
			</div>
		</div>
	</div>
	
</div>
{% endblock %}
