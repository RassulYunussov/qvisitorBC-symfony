{% extends 'AppBundle::base.html.twig' %}

{% block title %}AppBundle:UserProfile:userProfile{% endblock %}

{% block body %}

<div id="page-wrapper">
    <!-- Page Heading -->
	<div class="row">
				<div class="col-lg-12">
				{% block breadcrumb %}

					<div id="bc1" class="btn-group btn-breadcrumb">
						<br>
							<a class="btn btn-default" href="{{path('index')}}"><i class="fa fa-home"></i></a>
							<a class="btn btn-default" href="userprofile">Информация о пользователе</a>
					</div>
					{% endblock %}
				</div>
			</div>
			<div class="row">
			</div>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Информация о пользователе</h1>
				</div>
			</div>
	<div class="row">
		<div class="col-lg-8">
					<table class="table table-hover">
						<thead>
							<tr>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="td-bkground">Фамилия</td>
								<td>{{userPassport.lastname}}</td>
							</tr>
							<tr>
								<td class="td-bkground">Имя</td>
								<td>{{userPassport.firstname}}</td>
							</tr>
							<tr>
								<td class="td-bkground">Отчество</td>
								<td>{{userPassport.patronimic}}</td>
							</tr>
							<tr>
								<td class="td-bkground">Дата рождения</td>
								<td>{{userPassport.birthdate|date('Y-m-d') }}</td>
							</tr>
						</tbody>
					</table>
		</div>
		<div class="col-lg-4">
			<img src="{{ asset('bootstrap1/default.jpg')}}" alt="User Avatar" width="150" height="200">
		</div>
	</div>
</div>
{% endblock %}
