{% extends 'base.html.twig' %}

{% block body %}
    <h1>qvSector list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for qvSector in qvSectors %}
            <tr>
                <td><a href="{{ path('sector_show', { 'id': qvSector.id }) }}">{{ qvSector.id }}</a></td>
                <td>{{ qvSector.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sector_show', { 'id': qvSector.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sector_edit', { 'id': qvSector.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sector_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
